{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "on-monitor": [
        "dist/on-monitor"
      ],
      "on-monitor/*": [
        "dist/on-monitor/*"
      ],
      "on-monitor-config": [
        "dist/on-monitor-config"
      ],
      "on-monitor-config/*": [
        "dist/on-monitor-config/*"
      ]
    }
  }
}