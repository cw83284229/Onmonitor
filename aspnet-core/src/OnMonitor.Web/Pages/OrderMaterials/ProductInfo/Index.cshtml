@page
@using OnMonitor.Web.Pages.OrderMaterials.ProductInfo
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@inherits OnMonitor.Web.Pages.OnMonitorPage
@model IndexModel
@inject IPageLayout PageLayout
@{
    PageLayout.Content.Title = L["ProductInfo"].Value;
    PageLayout.Content.BreadCrumb.Add(L["Menu:ProductInfo"].Value);
    PageLayout.Content.MenuItemName = "ProductInfo";
}

@section scripts
{
    <abp-script src="/Pages/OrderMaterials/ProductInfo/index.js" />
}
@section styles
{
    <abp-style src="/Pages/OrderMaterials/ProductInfo/index.css"/>
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["ProductInfo"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-right">
                <abp-button id="NewProductInfoButton"
                            text="@L["CreateProductInfo"].Value"
                            icon="plus"
                            button-type="Primary" />
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="ProductInfoTable" class="nowrap">
            <thead>
            <tr>
                <th>@L["Actions"]</th>
                <th>@L["ProductInfoMaterialsNumber"]</th>
                <th>@L["ProductInfoMaterialsType"]</th>
                <th>@L["ProductInfoMaterialsName"]</th>
                <th>@L["ProductInfoPicture"]</th>
                <th>@L["ProductInfounits"]</th>
                <th>@L["ProductInfoMateriralsPrice"]</th>
                <th>@L["ProductInfoMarketPrice"]</th>
                <th>@L["ProductInfoRemark"]</th>
            </tr>
            </thead>
        </abp-table>
    </abp-card-body>
</abp-card>