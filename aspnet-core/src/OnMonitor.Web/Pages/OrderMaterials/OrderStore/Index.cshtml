@page
@using OnMonitor.Web.Pages.OrderMaterials.OrderStore
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@inherits OnMonitor.Web.Pages.OnMonitorPage
@model IndexModel
@inject IPageLayout PageLayout
@{
    PageLayout.Content.Title = L["OrderStore"].Value;
    PageLayout.Content.BreadCrumb.Add(L["Menu:OrderStore"].Value);
    PageLayout.Content.MenuItemName = "OrderStore";
}

@section scripts
{
    <abp-script src="/Pages/OrderMaterials/OrderStore/index.js" />
}
@section styles
{
    <abp-style src="/Pages/OrderMaterials/OrderStore/index.css"/>
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["OrderStore"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-right">
                <abp-button id="NewOrderStoreButton"
                            text="@L["CreateOrderStore"].Value"
                            icon="plus"
                            button-type="Primary" />
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="OrderStoreTable" class="nowrap">
            <thead>
            <tr>
                <th>@L["Actions"]</th>
                <th>@L["OrderStoreOrderMaterialId"]</th>
                <th>@L["OrderStoreBillMaterialId"]</th>
                <th>@L["OrderStoreCount"]</th>
                <th>@L["OrderStorePrice"]</th>
            </tr>
            </thead>
        </abp-table>
    </abp-card-body>
</abp-card>