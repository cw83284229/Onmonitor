@page
@using OnMonitor.Web.Pages.OrderMaterials.MaterialRepertory
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@inherits OnMonitor.Web.Pages.OnMonitorPage
@model IndexModel
@inject IPageLayout PageLayout
@{
    PageLayout.Content.Title = L["MaterialRepertory"].Value;
    PageLayout.Content.BreadCrumb.Add(L["Menu:MaterialRepertory"].Value);
    PageLayout.Content.MenuItemName = "MaterialRepertory";
}

@section scripts
{
    <abp-script src="/Pages/OrderMaterials/MaterialRepertory/index.js" />
}
@section styles
{
    <abp-style src="/Pages/OrderMaterials/MaterialRepertory/index.css"/>
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["MaterialRepertory"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-right">
                <abp-button id="NewMaterialRepertoryButton"
                            text="@L["CreateMaterialRepertory"].Value"
                            icon="plus"
                            button-type="Primary" />
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="MaterialRepertoryTable" class="nowrap">
            <thead>
            <tr>
                <th>@L["Actions"]</th>
                <th>@L["MaterialRepertoryOrderMaterialId"]</th>
                <th>@L["MaterialRepertoryBillMaterialId"]</th>
                <th>@L["MaterialRepertoryCount"]</th>
                <th>@L["MaterialRepertoryPrice"]</th>
            </tr>
            </thead>
        </abp-table>
    </abp-card-body>
</abp-card>