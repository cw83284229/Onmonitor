@page
@using OnMonitor.Web.Pages.OrderMaterials.SaleContent
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@inherits OnMonitor.Web.Pages.OnMonitorPage
@model IndexModel
@inject IPageLayout PageLayout
@{
    PageLayout.Content.Title = L["SaleContent"].Value;
    PageLayout.Content.BreadCrumb.Add(L["Menu:SaleContent"].Value);
    PageLayout.Content.MenuItemName = "SaleContent";
}

@section scripts
{
    <abp-script src="/Pages/OrderMaterials/SaleContent/index.js" />
}
@section styles
{
    <abp-style src="/Pages/OrderMaterials/SaleContent/index.css"/>
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["SaleContent"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-right">
                <abp-button id="NewSaleContentButton"
                            text="@L["CreateSaleContent"].Value"
                            icon="plus"
                            button-type="Primary" />
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="SaleContentTable" class="nowrap">
            <thead>
            <tr>
                <th>@L["Actions"]</th>
                <th>@L["SaleContentSaleStore"]</th>
                <th>@L["SaleContentSaleTime"]</th>
                <th>@L["SaleContentShipmentMethod"]</th>
                <th>@L["SaleContentRemark"]</th>
                <th>@L["SaleContentIsShipments"]</th>
            </tr>
            </thead>
        </abp-table>
    </abp-card-body>
</abp-card>