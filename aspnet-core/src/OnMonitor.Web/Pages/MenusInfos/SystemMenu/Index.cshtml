@page
@using OnMonitor.Web.Pages.MenusInfos.SystemMenu
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@inherits OnMonitor.Web.Pages.OnMonitorPage
@model IndexModel
@inject IPageLayout PageLayout
@{
    PageLayout.Content.Title = L["SystemMenu"].Value;
    PageLayout.Content.BreadCrumb.Add(L["Menu:SystemMenu"].Value);
    PageLayout.Content.MenuItemName = "SystemMenu";
}

@section scripts
{
    <abp-script src="/Pages/MenusInfos/SystemMenu/index.js" />
}
@section styles
{
    <abp-style src="/Pages/MenusInfos/SystemMenu/index.css"/>
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["SystemMenu"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-right">
                <abp-button id="NewSystemMenuButton"
                            text="@L["CreateSystemMenu"].Value"
                            icon="plus"
                            button-type="Primary" />
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="SystemMenuTable" class="nowrap">
            <thead>
            <tr>
                <th>@L["Actions"]</th>
                <th>@L["SystemMenupid"]</th>
                <th>@L["SystemMenutitle"]</th>
                <th>@L["SystemMenuicon"]</th>
                <th>@L["SystemMenuhref"]</th>
                <th>@L["SystemMenutarget"]</th>
                <th>@L["SystemMenusort"]</th>
                <th>@L["SystemMenustatus"]</th>
            </tr>
            </thead>
        </abp-table>
    </abp-card-body>
</abp-card>